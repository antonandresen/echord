{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023"],
    "moduleDetection": "force",
    "rootDir": "./src",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedDeclarations": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
